const NavLink = ({ to, children }) => {
  const loc = useLocation();
  const active = loc.pathname === to;
  return (
    <Link to={to} className={`px-2 py-1 rounded ${active ? 'text-blue-700 font-semibold' : 'text-gray-600 hover:text-blue-700'}`}>
      {children}
    </Link>
  );
};

const MobileMenu = () => {
  const [open, setOpen] = useState(false);
  return (
    <div className="relative">
      <button onClick={() => setOpen(!open)} className="p-2 rounded-md border">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none"><path d="M4 6h16M4 12h16M4 18h16" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round"/></svg>
      </button>
      {open && (
        <div className="absolute right-0 mt-2 w-48 bg-white shadow-md rounded-md p-2">
          <Link className="block p-2 hover:bg-gray-50 rounded" to="/">Home</Link>
          <Link className="block p-2 hover:bg-gray-50 rounded" to="/programs">Programs</Link>
          <Link className="block p-2 hover:bg-gray-50 rounded" to="/employers">Employers</Link>
          <Link className="block p-2 hover:bg-gray-50 rounded" to="/blog">Blog</Link>
          <Link className="block p-2 hover:bg-gray-50 rounded" to="/contact">Contact</Link>
          <Link className="block p-2 hover:bg-gray-50 rounded bg-yellow-400 text-white mt-2 text-center" to="/apply">Apply Now</Link>
        </div>
      )}
    </div>
  );
};

