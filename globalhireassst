  useTitle('Apply');
  // Cognito Forms iframe URL - replace with your form URL
  const cognitoURL = 'https://www.cognitoforms.com/Globalhireassist/Globalhireassist';

  return (
    <main className="max-w-4xl mx-auto p-6">
      <h1 className="text-2xl font-bold text-blue-800">Apply Now</h1>
