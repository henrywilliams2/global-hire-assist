const ProgramDetail = ({ title, content }) => (
  <div className="p-4 border rounded">
    <h3 className="font-semibold text-xl text-blue-700">{title}</h3>
    <p className="mt-2 text-gray-700">{content}</p>
    <div className="mt-4">
      <Link to="/apply" className="px-3 py-2 bg-blue-600 text-white rounded">Apply for {title}</Link>
    </div>
  </div>
);

const Blog = () => {
  useTitle('Blog');
  const [posts, setPosts] = useState([]);
  useEffect(() => {
    const saved = JSON.parse(localStorage.getItem('gha_blog') || '[]');
    setPosts(saved.reverse());
  }, []);
  return (
    <main className="max-w-4xl mx-auto p-6">
      <h1 className="text-3xl font-bold text-blue-800">Blog & News</h1>
      <p className="mt-2 text-gray-600">Visa updates, tips, and success stories.</p>

      <div className="mt-6 space-y-4">
        {posts.length === 0 && <div className="text-gray-500">No posts yet — use Admin to add blog posts.</div>}
        {posts.map((p) => (
          <article key={p.id} className="p-4 border rounded">
            <h3 className="font-semibold text-lg">{p.title}</h3>
            <div className="text-sm text-gray-500">{new Date(p.id).toLocaleDateString()}</div>
            <p className="mt-2 text-gray-700">{p.content}</p>
          </article>
        ))}
      </div>

      <Newsletter />
    </main>
  );
};

const Newsletter = () => {
  const [email, setEmail] = useState('');
  const subscribe = () => {
    const list = JSON.parse(localStorage.getItem('gha_news') || '[]');
    if (!list.includes(email)) {
      list.push(email);
      localStorage.setItem('gha_news', JSON.stringify(list));
      alert('Subscribed — thank you!');
      setEmail('');
    } else alert('Already subscribed');
  };
  return (
    <div className="mt-8 p-4 border rounded">
      <div className="font-semibold">Subscribe to our newsletter</div>
      <div className="mt-2 flex gap-2">
        <input value={email} onChange={(e) => setEmail(e.target.value)} className="flex-1 p-2 border rounded" placeholder="Your email" />
        <button onClick={subscribe} className="px-4 py-2 bg-blue-600 text-white rounded">Subscribe</button>
      </div>
    </div>
  );
};

const Contact = () => {
  useTitle('Contact');
  const phone = '+14472763403';
  const whatsapp = `https://wa.me/${phone.replace(/\D/g, '')}`;
  return (
    <main className="max-w-3xl mx-auto p-6">
      <h1 className="text-2xl font-bold text-blue-800">Contact Us</h1>
      <p className="mt-2 text-gray-700">Email: globalhireassist@gmail.com | Phone: {phone}</p>

      <div className="mt-6 grid md:grid-cols-2 gap-4">
        <div className="p-4 border rounded">
          <h3 className="font-semibold">Send a message</h3>
          <ContactForm />
        </div>

        <div className="p-4 border rounded">
          <h3 className="font-semibold">Quick contact</h3>
          <div className="mt-2">
            <a className="block p-2 border rounded mb-2" href={whatsapp} target="_blank" rel="noreferrer">Chat on WhatsApp</a>
            <a className="block p-2 border rounded mb-2" href={`mailto:globalhireassist@gmail.com`}>Email us</a>
            <div className="mt-4 text-sm text-gray-500">Office: Mesa, Arizona, USA</div>
          </div>
        </div>
      </div>
    </main>
  );
};

const ContactForm = () => {
  const [name, setName] = useState('');
  const [email, setEmail] = useState('');
  const [msg, setMsg] = useState('');
  const submit = (e) => {
    e.preventDefault();
    const list = JSON.parse(localStorage.getItem('gha_contacts') || '[]');
    list.push({ id: Date.now(), name, email, msg });
    localStorage.setItem('gha_contacts', JSON.stringify(list));
    setName(''); setEmail(''); setMsg('');
    alert('Message sent — we will contact you shortly');
  };
  return (
    <form onSubmit={submit} className="mt-2 space-y-2">
      <input value={name} onChange={(e)=>setName(e.target.value)} className="w-full p-2 border rounded" placeholder="Full name" required />
      <input value={email} onChange={(e)=>setEmail(e.target.value)} className="w-full p-2 border rounded" placeholder="Email" type="email" required />
      <textarea value={msg} onChange={(e)=>setMsg(e.target.value)} className="w-full p-2 border rounded" placeholder="Your message" required />
      <button className="px-4 py-2 bg-blue-600 text-white rounded">Send</button>
    </form>
  );
};

/* ---------- Applicant Apply page (Cognito form embed + payment options) ---------- */
